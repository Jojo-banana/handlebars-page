<h1>{{title}}</h1>
<h2>{{task}}</h2>
<form action="/api/updatetask" method="POST">
    <div class="mb-3">
        <input type="hidden" class="form-control" id="id" placeholder="Name of task" name="id" value="{{id}}">
    </div>
        <div class="mb-3">
        <label for="idtext" class="form-label">Task id</label>
        <input type="text" class="form-control" id="idtext" disabled placeholder="Name of task" name="idtext" value="{{id}}">
    </div>
    <div class="mb-3">
        <label for="TasksName" class="form-label">Task Name</label>
        <input type="text" class="form-control" id="TaskName" placeholder="Name of task" name="TaskName" value="{{TaskName}}">
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" class="form-control" id="Description" placeholder="Description" name="Description" value ="{{Description}}">
    </div>

    <div class="mb=3">
        <label for="owner" class="form-label">Owner</label>
        <select class="form-select" aria-label="Owner" id="Owner" name="Owner">
            <option selected>owner</option>
            <option value="Joachim">Joachim</option>
            <option value="Riley">Riley</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="status" class="form-label">Status</label>
        <select class="form-select" aria-label="Default select example" id="Status" name="Status">
            <option selected>Status</option>
            <option value="open">open</option>
            <option value="closed">closed</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>
<script>
    $(function () {
        $('#Owner').val("{{Owner}}")
        $('#Status').val("{{Status}}")
    })
</script>